Bootstrap: docker
From: ubuntu:20.04

%labels
    Application_name vcflib 1.09    
    Author Julia Wiggeshoff
    Author_email julia.wiggeshoff@uk-koeln.de
    Year 2023

%post
    apt-get update

    export DEBIAN_FRONTEND=noninteractive
    apt-get install -y --no-install-recommends tzdata 

    ln -fs /usr/share/zoneinfo/Europe/Berlin /etc/localtime 
    dpkg-reconfigure --frontend noninteractive tzdata

    apt-get install -y -f --no-install-recommends build-essential fakeroot \
        bzip2 \
        ca-certificates \
        cmake \
        gcc \
        g++ \
        git \
        libbz2-dev \
        libcurl4-openssl-dev \
        libhts-dev \
        libjsoncpp-dev \
        libtabixpp-dev \
        libtabixpp0 \
        liblzma-dev \
        pandoc \
        pkg-config \
        python3 \
        python3-dev \
        python3-pip \
        tabix \
        zlib1g

    export LANG=C.UTF-8 LC_ALL=C.UTF-8

    pip install pybind11[global]

    git clone --recursive https://github.com/vcflib/vcflib.git

    cd vcflib
    git checkout -b 0a05bec
    mkdir -p build && cd build
    cmake -DCMAKE_BUILD_TYPE=Debug -DZIG=OFF -DOPENMP=OFF ..
    cmake --build .
    cmake --install .  

    cd /

    cp /vcflib/build/contrib/WFA2-lib/libwfa2.so.0 /lib/x86_64-linux-gnu/

    ldconfig
    
%environment
    export PATH="/usr/local/bin:$PATH"
    LANG=C.UTF-8 LC_ALL=C.UTF-8
